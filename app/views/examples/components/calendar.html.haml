%h2.page-title
	Components -
	%span.fw-semi-bold Calendar App
	%small Draggable access
.row
	.col-md-8
		%section.widget
			%header
				%h4
					%i.fa.fa-calendar
					Calendar
				.actions
					.btn-group.mr-sm
						%button#calender-prev.btn.btn-default
							%i.fa.fa-angle-left
						%button#calender-next.btn.btn-default
							%i.fa.fa-angle-right
					%button#today.btn.btn-warning.mr-sm{:type => "button"}
						Today
					#calendar-switcher.btn-group{"data-toggle" => "buttons"}
						%label.btn.btn-default.active
							%input{:checked => "", :name => "view", :type => "radio", :value => "month"}
								Month
						%label.btn.btn-default
							%input{:name => "view", :type => "radio", :value => "agendaWeek"}
								Week
						%label.btn.btn-default
							%input{:name => "view", :type => "radio", :value => "agendaDay"}
								Day
			.body
				#calendar.calendar.mt-lg           .col-md-4
		%section.widget
			%header
				%h5
					%i.fa.fa-exchange
					Draggable events
			.body
				#external-events
					.external-event.bg-danger{"data-event-class" => "bg-danger text-white"}
						%i.fa.fa-check
						Buy this template
					.external-event.bg-warning{"data-event-class" => "bg-warning text-white"} Study some Node
					.external-event.bg-success{"data-event-class" => "bg-success text-white"} Make a tea
					.external-event.bg-primary{"data-event-class" => "bg-primary text-white"}
						%i.fa.fa-book
						Go to school
					.external-event.bg-info{"data-event-class" => "bg-info text-white"} Open windows
